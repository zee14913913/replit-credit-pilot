{
  "database_configuration": {
    "version": "1.0.0",
    "last_updated": "2025-11-17",
    "description": "Single source of truth for all database configurations",
    
    "development": {
      "sqlite": {
        "enabled": true,
        "path": "db/smart_loan_manager.db",
        "check_same_thread": false,
        "timeout": 30
      },
      "postgresql": {
        "enabled": false,
        "connection_string_env": "DATABASE_URL",
        "pool_size": 5,
        "max_overflow": 10
      }
    },
    
    "production": {
      "sqlite": {
        "enabled": false
      },
      "postgresql": {
        "enabled": true,
        "connection_string_env": "DATABASE_URL",
        "pool_size": 20,
        "max_overflow": 50,
        "ssl_required": true
      }
    },
    
    "schema_version": "3.5.0",
    
    "tables": {
      "customers": {
        "primary_key": "id",
        "indexes": ["customer_code", "email"]
      },
      "credit_cards": {
        "primary_key": "id",
        "foreign_keys": ["customer_id"]
      },
      "statements": {
        "primary_key": "id",
        "foreign_keys": ["credit_card_id"]
      },
      "transactions": {
        "primary_key": "id",
        "foreign_keys": ["statement_id"]
      },
      "loan_products": {
        "primary_key": "id",
        "total_records": 831
      },
      "audit_logs": {
        "primary_key": "id",
        "retention_days": 90
      }
    },
    
    "migrations": {
      "enabled": true,
      "directory": "db/migrations",
      "auto_migrate": false
    },
    
    "backup": {
      "enabled": true,
      "frequency": "daily",
      "retention_days": 30,
      "path": "backups/db"
    }
  }
}
