{
  "pdf_upload": {
    "max_file_size_mb": 10,
    "max_file_size_bytes": 10485760,
    "allowed_mime_types": [
      "application/pdf"
    ],
    "upload_directory": "./uploads/statements",
    "temp_directory": "./uploads/temp",
    "allowed_extensions": [
      ".pdf"
    ]
  },
  "google_document_ai": {
    "project_id": "${GOOGLE_CLOUD_PROJECT_ID}",
    "processor_id": "${DOCUMENT_AI_PROCESSOR_ID}",
    "location": "us",
    "api_credentials_path": "./credentials/google-cloud-key.json",
    "timeout_seconds": 300,
    "retry_attempts": 3,
    "enable_caching": true
  },
  "database": {
    "type": "SQLite",
    "file_path": "./data/creditpilot.db",
    "auto_backup": {
      "enabled": true,
      "schedule": "0 2 * * *",
      "backup_directory": "./backups/database",
      "retention_days": 30,
      "compression": true
    },
    "connection_pool": {
      "max_connections": 10,
      "timeout": 30
    }
  },
  "notifications": {
    "email": {
      "enabled": true,
      "smtp_host": "${SMTP_HOST}",
      "smtp_port": "${SMTP_PORT}",
      "smtp_username": "${SMTP_USERNAME}",
      "smtp_password": "${SMTP_PASSWORD}",
      "from_email": "${SMTP_FROM_EMAIL}",
      "use_tls": true
    },
    "reminders": {
      "enabled": true,
      "daily_time": "09:00",
      "advance_days": [3, 7, 14],
      "timezone": "Asia/Kuala_Lumpur"
    }
  },
  "logging": {
    "level": "INFO",
    "file_path": "./logs/system.log",
    "rotation": {
      "enabled": true,
      "when": "daily",
      "interval": 1,
      "retention_days": 30,
      "max_bytes": 10485760,
      "backup_count": 30
    },
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "date_format": "%Y-%m-%d %H:%M:%S",
    "console_output": true
  },
  "application": {
    "name": "CreditPilot",
    "version": "1.0.0",
    "environment": "production",
    "debug": false,
    "timezone": "Asia/Kuala_Lumpur",
    "language": "zh_CN"
  },
  "security": {
    "session_timeout_minutes": 30,
    "password_min_length": 8,
    "max_login_attempts": 5,
    "lockout_duration_minutes": 15
  },
  "processing": {
    "batch_size": 50,
    "max_concurrent_jobs": 5,
    "job_timeout_seconds": 600
  }
}
